        <main>
            <div>
                <h2>Browse Books</h2>
                Books will populate here.
                {{!-- Create a table--}}
                <table id="booksTable">

                    {{!-- Header section --}}
                    <thead>
                        <tr>
                            {{#each data.[0]}}
                            <th>
                                {{@key}}
                            </th>
                            {{/each}}
                        </tr>
                    </thead>

                    {{!-- Body section --}}
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{this.bookID}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.authorName}}</td>
                            <td>{{this.isbn}}</td>
                            <td>{{this.publisher}}</td>
                            <td>{{this.genre}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <div>
                <h2>Add New</h2>
                * Note: For items with no known publisher, please select first option 'No Publisher'. *
                <fieldset>
                    <form method="POST" id="add-book" action="/add-book">
                        <span style="margin: 0 10px">
                            <label for="newTitle">Title:</label>
                            <input type="text" id="newTitle" name="newTitle"/>
                        </span>
                        <span style="margin: 0 10px">
                            <label for="newBookAuthor">Author:</label>
                            <input type="text" id="newBookAuthor" name="newBookAuthor" list="authors" autocomplete="off">
                            <datalist id="authors">
                                {{#each authors}}
                                <option value="{{this.authorID}}">{{this.fullAuthorName}} - {{this.birthdate}}</option>
                                {{/each}}
                            </datalist>
                        </span>
                        <span style="margin: 0 10px">
                            <label for="newIsbn">ISBN (14 characters max):</label>
                            <input type="text" id="newIsbn" name="newIsbn">
                        </span>

                        <span style="margin: 0 10px">
                            <label for="newBookPub">Publisher:</label>
                            <input type="text" id="newBookPub" name="newBookPub" list="publishers" autocomplete="off">
                            <datalist id="publishers">
                                <option value=NULL><i>No Publisher</i></option>
                                {{#each publishers}}
                                <option value="{{this.publisherID}}">{{this.name}}</option>
                                {{/each}}
                            </datalist>
                        </span>

                        <span style="margin: 0 10px">
                            <label for="newBookGenre">Genre:</label>
                            <input type="text" id="newBookGenre" name="newBookGenre"/>
                        </span>
                        <br>
                        <input type="submit"/>
                    </form>
                </fieldset>
            </div>

            <div>
                <h2>Update</h2>
                <fieldset>
                    <form method="POST" id="updateBook">
                        <span style="margin: 0 10px">
                            <label for="titleU">Book Title:</label>
                            <input type="text" id="titleU" name="titleU" list="booksU" autocomplete="off">
                            <datalist id="booksU">
                                <option value="The Selection"></option>
                                <option value="The Count of Monte Cristo"></option>
                                <option value="Lady of the Camellias"></option>
                            </datalist>
                        </span>
                        <span style="margin: 0 10px">
                            <label for="bookIDU">ID:</label>
                            <input type="text" id="bookIDU" name="bookIDU" value="1" readonly/>
                        </span>
                        <span style="margin: 0 10px">
                            <label for="bookTitleU">Title:</label>
                            <input type="text" id="bookTitleU" name="bookTitleU" value="The Selection"/>
                        </span>
                        <span style="margin: 0 10px">
                            <label for="bookAuthorUp">Author:</label>
                            <input type="text" id="bookAuthorUp" name="bookAuthorUp" list="bookAuthorsU" autocomplete="off" value="Kiera Cass">
                            <datalist id="bookAuthorsU">
                                <option value="Kiera Cass"></option>
                                <option value="Alexandre Dumas"></option>
                                <option value="Alexandre Dumas"></option>
                            </datalist>
                        </span>
                        <span style="margin: 0 10px">
                            <label for="isbnU">ISBN:</label>
                            <input type="text" id="isbnU" name="isbnU" value="978-0062059949"/>
                        </span>
                        <span style="margin: 0 10px">
                            <label for="bookPublisherU">Publisher:</label>
                            <input type="text" id="bookPublisherU" name="bookPublisherU" list="bookPublishersU" autocomplete="off" placeholder="HarperCollins">
                            <datalist id="bookPublishersU">
                                <option value="NULL"></option>
                                <option value="HarperCollins Publisher"></option>
                                <option value="Penguin Classics"></option>
                                <option value="Dover Publications"></option>
                            </datalist>
                        </span>
                        <span style="margin: 0 10px">
                            <label for="genreU">Genre:</label>
                            <input type="text" id="genreU" name="genreU" value="fantasy"/>
                        </span>
                        <br>
                        <input type="submit" onclick="return confirm('Are you sure you want to update this book?')"/>
                    </form>
                </fieldset>
            </div>

            <div>
                <h2>Delete</h2>
                <fieldset>
                    <form method="POST" id="deleteBook">
                        <span style="margin: 0 10px">
                            <label for="bookD">Book ID:</label>
                            <select name="bookD" id="bookD">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </span>
                        <br>
                        <input type="submit" onclick="return confirm('Are you sure you want to delete this book?')"/>
                    </form>
                </fieldset>
            </div>
        </mian>

    </body>
